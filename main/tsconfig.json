{
    "compilerOptions": {
        "module":"CommonJS",
        "removeComments": true,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "app",
        "moduleResolution": "Node",
        "target": "ES5",
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "node_modules/**/*", "**/*.spec.ts"],
}